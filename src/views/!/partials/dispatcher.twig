<div class="makeup--header">
    <div class="row">
        <div class="col-xs-2 col-xs-12">
            <select class="form-control disp-select page-selector">
                <option value="/makeup"{% if 'makeup'==path %} selected{% endif %}>--выберите страницу или блок--
                </option>
                <optgroup label="СТРАНИЦЫ">
                    {% if pages %}
                        {% for b, data in pages %}
                            {#<li><a href="/makeup/frame-{{ b }}" class="js-frame {% if block==b %}js-current{% endif %}" target="site">{{ b }}</a></li>#}
                            {% set path_item = 'makeup/page-'~ b %}
                            <option value="/{{ path_item }}"{% if path_item==path %} selected{% endif %}>{{ b|upper }}</option>
                        {% endfor %}
                    {% endif %}
                </optgroup>
                <optgroup label="БЛОКИ">
                    {% if blocks %}
                        {% for b, data in blocks %}
                            {#<li><a href="/makeup/frame-{{ b }}" class="js-frame {% if block==b %}js-current{% endif %}" target="site">{{ b }}</a></li>#}
                            {% set path_item = 'makeup/block-'~ b %}
                            <option value="/{{ path_item }}"{% if path_item==path %} selected{% endif %}>{{ b|upper }} {% if data.breakpoints() %}[{{ data.breakpoints()|join(', ') }}]{% endif %}
                            </option>
                        {% endfor %}
                    {% endif %}
                </optgroup>
            </select>
            Отображаемый элемент
        </div>
        <div class="col-xs-3">
            {% if themes %}
                <div>
                    <div class="btn-group">
                        {% for t in themes %}
                            <button data-value="{{ t }}" type="button"
                                    class="btn btn-{% if (t==theme) or (not theme and loop.first) %}primary active{% else %}default{% endif %} disp-btn theme-selector">{{ t }}</button>
                        {% endfor %}
                    </div>
                </div>
                Тема оформления
            {% endif %}
        </div>
        <div class="col-xs-5">
            <div>
                <div class="btn-group">
                    {% if breakpoints %}
                        {% for b, val in breakpoints %}
                            <button data-value="{{ b }}" type="button"
                                    title="{{ val.title }}"
                                    class="btn btn-{% if b==breakpoint %}primary active{% else %}default{% endif %} disp-btn breakpoint-selector">{{ val.text }}</button>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            Разрешения экрана
        </div>
        <div class="col-xs-2 text-right">
            <a target="_blank" href="/makeup/download" class="btn btn-primary btn-lg">Скачать</a>
        </div>
    </div>
</div>